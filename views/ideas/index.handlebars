{{!-- DISPLAYING ALL THE IDEAS --}}

{{!-- LOOPING IDEAS OBJ FOR EACH ITEM(IDEA) --}}
{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    {{!-- ADDING BTN TO EDIT --}}
    {{!-- {{id}} is generated automatically for each IDEA obj --}}
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
  </div>
{{else}}
  <p>No video ideas listed</p>
{{/each}}